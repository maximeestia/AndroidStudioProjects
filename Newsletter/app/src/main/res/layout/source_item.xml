<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Editeur:" />

    <TextView
        android:id="@+id/item_source_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_source_name"
        app:layout_constraintStart_toEndOf="@+id/item_source_name"
        app:layout_constraintTop_toTopOf="@+id/item_source_name"
        tools:text="ECategorie:" />
    <TextView
        android:id="@+id/item_source_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_source_categorie"
        app:layout_constraintStart_toEndOf="@+id/item_source_categorie"
        app:layout_constraintTop_toTopOf="@+id/item_source_categorie"
        tools:text="Pays:" />
    <TextView
        android:id="@+id/item_source_langue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_source_country"
        app:layout_constraintStart_toEndOf="@+id/item_source_country"
        app:layout_constraintTop_toTopOf="@+id/item_source_country"
        tools:text="Pays:" />
    <TextView
        android:id="@+id/item_source_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/item_source_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Appercu texte" />
</androidx.constraintlayout.widget.ConstraintLayout>